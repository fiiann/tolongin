<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.fian.root.simplifiedcodinglogin.TambahMomen"
    android:orientation="vertical"
    android:weightSum="1">


    <!--<Image-->
    <!--android:id="@+id/foto"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:hint="Masukan Foto"-->
    <!--android:inputType="text-->
    <!--android:layout_weight="0.13" />-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/foto"
                android:layout_width="match_parent"
                android:layout_height="177dp"
                android:src="@drawable/splash_screen" />

            <Button
                android:id="@+id/choose"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:text="Choose Image" />

            <EditText
                android:id="@+id/judul"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.13"
                android:hint="Masukan Judul"
                android:inputType="text" />

            <EditText
                android:id="@+id/penolong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.13"
                android:hint="Masukkan username penolong"
                android:inputType="text" />

            <EditText
                android:id="@+id/ditolong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.13"
                android:hint="Username yang ditolong"
                android:inputType="text" />

            <EditText
                android:id="@+id/pertolongan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.35"

                android:ems="10"
                android:hint="Momen apa ini?"
                android:inputType="textMultiLine" />

            <!--<DatePicker-->
                <!--android:id="@+id/tanggal"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content" />-->

            <Button
                android:id="@+id/submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:text="Submit" />


        </LinearLayout>
    </ScrollView>


</LinearLayout>
